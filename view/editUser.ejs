<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chỉnh sửa thông tin</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <div class="wrapper">
      <div class="container">
        <div class="row justify-content-around">
          <form
            class="col-md-4 bg-light p-3 my-3 border border-success-subtle rounded-4 shadow-lg edit-form"
          >
            <h1 class="text-center text-uppercase h3 py-3">
              Chỉnh sửa <br />thông tin
            </h1>
            <div class="form-group">
              <label for="fullname">Họ và tên</label>
              <input
                type="text"
                name="name"
                id="name"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label for="">Ngày sinh</label>
              <input type="date" name="birth" id="birth" class="form-control" />
            </div>
            <div class="form-group">
              <label for="">Số điện thoại</label>
              <input
                type="text"
                name="phoneNumber"
                id="phoneNumber"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label for="">Địa chỉ</label>
              <input
                type="text"
                name="address"
                id="address"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="">Mật khẩu</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
              />
            </div>
            <div class="form-group mb-3">
              <label for="">Xác nhận mật khẩu</label>
              <input
                type="password"
                name="re_password"
                id="re_password"
                class="form-control"
              />
            </div>
            <div class="float-end">
              <button type="submit" class="btn btn-success">Xác nhận</button>
              <button type="button" class="btn btn-secondary">Hủy</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% id %>
    <script>
      const editForm = document.querySelector(".edit-form");
      const convertDateToString = (date) => {
        if (date) {
          const newdate = new Date(date);
          return newdate.toISOString().split("T")[0];
        }
        return "00-00-0000";
      };
      const convertStringToDate = (date) => {
        return `${date}T17:00:00.000Z`
      }
      if (editForm) {
        var id = `<%= id %>`;
        editForm.addEventListener("submit", function (event) {
          event.preventDefault();
        });

        document.addEventListener("DOMContentLoaded", () => {
          const name = document.getElementById("name");
          const birth = document.getElementById("birth");
          const phoneNumber = document.getElementById("phoneNumber");
          const email = document.getElementById("email");
          const address = document.getElementById("address");
          fetch(`http://localhost:3000/user/getById/${id}`)
            .then((response) => response.json())
            .then((data) => {
              const userData = data[0];
              console.log(userData);
              if (data) {
                name.value = userData.name ?? "";
                birth.value = convertDateToString(userData.birth);
                phoneNumber.value = userData.phoneNumber ?? "";
                email.value = userData.email ?? "";
                address.value = userData.address ?? "";
              }
            });
          editForm.addEventListener("submit", (e) => {

            const updateInfo = {
              name: document.getElementById("name").value,
              birth: convertDateToString(document.getElementById("birth").value),
              phoneNumber: document.getElementById("phoneNumber").value,
              email: document.getElementById("email").value,
              address: document.getElementById("address").value,
            };
            fetch("http://localhost:3000/user/post", {
              method: "POST",
              body: updateInfo,
            })
              .then((response) => response.json())
              .then((data) => {
                console.log(data);
                window.location.href = '/user/viewuser'
              })
              .catch((error) => {
                window.location.href = "/error";
              });
          });
        });
      } else {
        window.location.href = "/error";
      }
    </script>
  </body>
</html>
